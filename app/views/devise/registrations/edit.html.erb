<div class="user-edit">
  <div class="container">
    <div class="section-title">
      <h3>アカウント情報編集</h3>
    </div><!-- /.section-title -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <ul class='user-edit-list'>
      <div class="user-edit-img">
        <% if current_user.image? %>
        <img src=<%= current_user.image %>>
        <% else %>
        <img src="/assets/profile-image.png" %>
        <% end %>
      </div><!-- /.user-edit-img -->
      <% if resource.email == 'guest@example.com' %>
      <h5>※ゲストユーザーは編集できません</h5>
      <% end %>
      <%= f.label :image, "ユーザー画像" %>
      <%= f.file_field :image, autofocus: true, class: "form-control" %>
    </ul>
    <ul class='user-edit-list'>
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "最大10文字", maxlength: 10 %>
    </ul>
    <ul class='user-edit-list'>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "xxx@email.com" %>
    </ul>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <ul class="user-edit-list">
      <%= f.label :password, "パスワード変更(変更したい場合)" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "半角英数6文字以上" %>
    </ul>
    <ul class="user-edit-list">
      <%= f.label :password_confirmation, "パスワード変更(確認)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "再度ご入力ください" %>
    </ul>
    <% if resource.email != 'guest@example.com' %>
    <%= f.submit "変更する", class: "btn btn-primary form-submit-btn" %>
    <% end %>
    <%= link_to  "マイページへ", user_path(current_user), class: "link-below-user-form" %>
    <% end %>
  </div>
</div><!-- /.user-edit -->

<% if resource.email == 'guest@example.com' %>
<script type="text/javascript">
  $(function () {
    $('.edit_user :input').prop('disabled', true);
    $('.edit_user :input').prop('disabled', true);
    $('.form-submit-btn').off('mouseenter mouseleave');
  });
</script>
<% end %>
